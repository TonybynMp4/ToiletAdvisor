{
	"name": "toiletadvisor",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "pnpm -r dev",
		"build": "pnpm -r build",
		"dev:web": "pnpm --filter web dev",
		"dev:api": "pnpm --filter api-server dev",
		"dev:auth": "pnpm --filter auth-server dev",
		"db:push": "pnpm --filter @toiletadvisor/db db:push",
		"db:studio": "pnpm --filter @toiletadvisor/db db:studio",
		"db:generate": "pnpm --filter @toiletadvisor/db db:generate",
		"db:migrate": "pnpm --filter @toiletadvisor/db db:migrate",
		"db:start": "pnpm --filter @toiletadvisor/db db:start",
		"db:watch": "pnpm --filter @toiletadvisor/db db:watch",
		"db:stop": "pnpm --filter @toiletadvisor/db db:stop",
		"db:down": "pnpm --filter @toiletadvisor/db db:down",
		"typecheck": "pnpm -r check-types",
		"check": "oxlint && oxfmt --write"
	},
	"dependencies": {
		"@toiletadvisor/env": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@toiletadvisor/config": "workspace:*",
		"@types/node": "^22.13.14",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.34.0",
		"typescript": "^5"
	},
	"packageManager": "pnpm@10.25.0"
}
