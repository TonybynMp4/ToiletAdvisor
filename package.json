{
	"name": "toiletadvisor",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "docker compose -f docker-compose.dev.yml up -d --build",
		"dev:down": "docker compose -f docker-compose.dev.yml down",
		"dev:local": "pnpm -r dev",
		"dev:web": "pnpm --filter web dev",
		"dev:api": "pnpm --filter api-server dev",
		"dev:auth": "pnpm --filter auth-server dev",
		"build": "pnpm -r build",
		"prod": "docker compose up --build -d",
		"prod:down": "docker compose down",
		"db:push": "pnpm --filter @toiletadvisor/db db:push",
		"db:studio": "pnpm --filter @toiletadvisor/db db:studio",
		"db:generate": "pnpm --filter @toiletadvisor/db db:generate",
		"db:migrate": "pnpm --filter @toiletadvisor/db db:migrate",
		"db:prod:start": "docker compose up -d mysql",
		"db:prod:stop": "docker compose stop mysql",
		"db:prod:down": "docker compose down mysql",
		"db:dev:start": "docker compose -f docker-compose.dev.yml up -d mysql",
		"db:dev:stop": "docker compose -f docker-compose.dev.yml stop mysql",
		"db:dev:down": "docker compose -f docker-compose.dev.yml down mysql",
		"typecheck": "pnpm -r check",
		"lint": "oxlint && oxfmt --write",
		"ci:env": "sh ./scripts/copy-env.sh"
	},
	"dependencies": {
		"@toiletadvisor/env": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@toiletadvisor/config": "workspace:*",
		"@types/node": "^22.13.14",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.34.0",
		"typescript": "^5"
	},
	"packageManager": "pnpm@10.28.1"
}
